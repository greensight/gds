{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "strict": true,
        "outDir": "esm",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@utils/*": ["src/utils/*"],
            "@helpers/*": ["src/helpers/*"],
            "@autokits/*": ["src/autokits/*"],
            "@icons/*": ["src/icons/*"],
            "@decorators/*": [".storybook/decorators/*"]
        }
    },
    "include": ["src", ".storybook/**/*.ts", ".storybook/**/*.tsx"]
}
