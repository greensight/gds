{
    "compilerOptions": {
        "target": "esnext",
        "allowJs": true,
        "jsx": "react",
        "isolatedModules": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "esm"
    },
    "include": ["src"]
}
